#include <stdio.h>

int factorial(int *n, int *res) {
    *res = 1;
    for (int i = 1; i <= *n; i++) {
        *res *= i;
    }
}

int main() {
    int num, fact;

    printf("Enter a positive integer: ");
    scanf("%d", &num);

    factorial(&num, &fact);

    printf("Factorial of %d is %d\n", num, fact);

    return 0;
}

